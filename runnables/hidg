# Duckyscript interpreter for usb gadget devices

#echo () { :; }
#slp () { :; }

file=$1

if [ $2 ]; then
	device=$2
else
	device=/dev/hidg0
fi

if [ $3 ]; then
	delay=$3
else
	delay=100
fi

asciitokey[0]=0
asciitokey[1]=0

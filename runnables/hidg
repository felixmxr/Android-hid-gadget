asciitokey[123]=236
asciitokey[124]=300
asciitokey[125]=239
asciitokey[126]=248
asciitokey[127]=0

function modifier {
	echo -n "$1 ==> "
	case $1 in
	  "WINDOWS"|"GUI")
		keymodcode=$(($keymodcode+128))
	  ;;

      "ALT")
		keymodcode=$(($keymodcode+4))
	  ;;

      "SHIFT")
		keymodcode=$(($keymodcode+2))
	  ;;
      
	  "CONTROL"|"CTRL")
		keymodcode=$(($keymodcode+1))
	  ;;
	  
	  "ENTER"|"RETURN")
		keycode=40	  
	  ;;	 
	  
      "ESC"|"ESCAPE")
		keycode=41
	  ;; 	  

      "BACKSPACE")
		keycode=42  
	  ;; 	  

      "TAB")
		keycode=43  
	  ;; 
  
      "SPACE")
		keycode=44 
	  ;; 
	  
	  "CAPSLOCK")
		keycode=57	  
	  ;;
	  
      "F1")
		keycode=58  
	  ;; 
	  
      "F2")
		keycode=59  
	  ;; 
      
	  "F3")
		keycode=60  
	  ;; 
	  
	  "F4")
		keycode=61 
	  ;; 
	  
	  "F5")
		keycode=62 
	  ;;
	  
	  "F6")
		keycode=63 
	  ;;
	  
	  "F7")
		keycode=64  
	  ;;
	  
	  "F8")
		keycode=65 
	  ;;
	  
	  "F9")
		keycode=66
	  ;;
	  
	  "F10")
		keycode=67 
	  ;;
	  
	  "F11")
		keycode=68 
	  ;;	  	  	  
	  
	  "F12")
		keycode=69
	  ;;

      "PRINTSCREEN")
		keycode=70	  
	  ;; 
	  
      "SCROLLLOCK")
		keycode=71	  
	  ;;
	  
	  "BREAK"|"PAUSE")
		keycode=72	  
	  ;;  
	  
      "INSERT")
		keycode=73  
	  ;; 

      "HOME")
		keycode=74  
	  ;; 
	  
      "PAGEUP")
		keycode=75  
	  ;; 

      "DELETE"|"DEL")
		keycode=76 
	  ;; 
  
      "END")
		keycode=77	  
	  ;; 
	  
      "PAGEDOWN")
		keycode=78 
	  ;; 	  

      "RIGHTARROW"|"RIGHT")
		keycode=79  
	  ;;
	  
      "LEFTARROW"|"LEFT")
		keycode=80  
	  ;;	  
      "DOWNARROW"|"DOWN")
		keycode=81	  
	  ;;	  

      "UPARROW"|"UP")
		keycode=82	  
	  ;;

	  "NUMLOCK")
		keycode=83	  
	  ;; 
	  
	  "MENU"|"APP")
		keycode=101
	  ;;

	  *)
		echo PARSING inline string
		for i in `seq 0 $((${#1}-1))`
		do
			hexcode=$(printf "%02X" $keycode)
			modcode=$(printf "%02X" $keymodcode)

			#echo "$modcode $hexcode"
			echo "\x$modcode\x00\x$hexcode\x00\x00\x00\x00\x00"
			
			echo "\x$modcode\x00\x$hexcode\x00\x00\x00\x00\x00" >$device
			millisleep $delay
			echo "\x$modcode\x00\x00\x00\x00\x00\x00\x00" >$device
			millisleep $delay
			
			asciicode=$(printf "%d" "'${1:$i:1}")
			keycode=${asciitokey[$asciicode]}
			keycode=$(($keycode % 100))
			echo -n "${1:$i:1} ==> "
		done
	  ;;
	  
	esac
}

function millisleep {
	slp $1
}

echo "The file is $file and the device is $device with a delay of $delay"

cat $file | while IFS= read -r line; do 

   #echo $line

   type=${line%% *}

   case $type in
      
	  "REM") echo $line
		;;

      "DEFAULT_DELAY"|"DEFAULTDELAY")
		delay=${line/$type /}
		echo " ==> The DEFAULTDELAY is now $delay"
		;;

      "DELAY") #echo "this causes a delay"
		echo "DELAY for ${line/$type/} milliseconds"
		millisleep ${line/$type/}
		;;

      "STRING")
		echo STRING
		line=${line/$type /}
		for i in `seq 0 $((${#line}-1))`
		do
			asciicode=$(printf "%d" "'${line:$i:1}")
			keycode=${asciitokey[$asciicode]}
			if [ $keycode -gt 200 ]; then
				keycode=$(($keycode-200))
				keymodcode=64
			elif [ $keycode -gt 100 ]; then
				keycode=$(($keycode-100))
				keymodcode=2
			else
				keymodcode=0
			fi
			hexcode=$(printf "%02X" $keycode)
			modcode=$(printf "%02X" $keymodcode)

			echo -n "${line:$i:1} ==> "
			#echo "$modcode $hexcode"
			echo "\x$modcode\x00\x$hexcode\x00\x00\x00\x00\x00"
			
			echo "\x$modcode\x00\x$hexcode\x00\x00\x00\x00\x00" >$device
			millisleep $delay
			echo "\x00\x00\x00\x00\x00\x00\x00\x00" >$device
			millisleep $delay
		done
		;;
	  
	  "REPEAT")
		echo REPEAT ${line/$type /} times
		for i in `seq 1 ${line/$type /}`
		do
			echo -n "$i ==> "
			#echo "$modcode $hexcode"
			echo "\x$modcode\x00\x$hexcode\x00\x00\x00\x00\x00"
			
			echo "\x$modcode\x00\x$hexcode\x00\x00\x00\x00\x00" >$device
			millisleep $delay
			echo "\x00\x00\x00\x00\x00\x00\x00\x00" >$device
			millisleep $delay
		done	
		;;
	  
      *)
		keycode=0
		keymodcode=0
		for command in $line
		do
			modifier $command
		done
		hexcode=$(printf "%02X" $keycode)
		modcode=$(printf "%02X" $keymodcode)
		
		#echo "$modcode $hexcode"	
		echo "\x$modcode\x00\x$hexcode\x00\x00\x00\x00\x00"
			
		echo "\x$modcode\x00\x$hexcode\x00\x00\x00\x00\x00" >$device
		millisleep $delay
		echo "\x$modcode\x00\x00\x00\x00\x00\x00\x00" >$device
		millisleep $delay
		echo "\x00\x00\x00\x00\x00\x00\x00\x00" >$device
		millisleep $delay
	  ;;
	esac

done
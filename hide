function modifier {
	case $1 in
	  "WINDOWS"|"GUI")
		modcode=$(($modcode+128))
	  ;;

      "ALT")
		modcode=$(($modcode+4))
	  ;;

      "SHIFT")
		modcode=$(($modcode+2))
	  ;;
      
	  "CONTROL"|"CTRL")
		modcode=$(($modcode+1))
	  ;;
	  
	  "ENTER"|"RETURN")
		keycode=40	  
	  ;;	 
	  
      "ESC"|"ESCAPE")
		keycode=41
	  ;; 	  

      "BACKSPACE")
		keycode=42  
	  ;; 	  

      "TAB")
		keycode=43  
	  ;; 
  
      "SPACE")
		keycode=44 
	  ;; 
	  
	  "CAPSLOCK")
		keycode=57	  
	  ;;
	  
      "F1")
		keycode=58  
	  ;; 
	  
      "F2")
		keycode=59  
	  ;; 
      
	  "F3")
		keycode=60  
	  ;; 
	  
	  "F4")
		keycode=61 
	  ;; 
	  
	  "F5")
		keycode=62 
	  ;;
	  
	  "F6")
		keycode=63 
	  ;;
	  
	  "F7")
		keycode=64  
	  ;;
	  
	  "F8")
		keycode=65 
	  ;;
	  
	  "F9")
		keycode=66
	  ;;
	  
	  "F10")
		keycode=67 
	  ;;
	  
	  "F11")
		keycode=68 
	  ;;	  	  	  
	  
	  "F12")
		keycode=69
	  ;;

      "PRINTSCREEN")
		keycode=70	  
	  ;; 
	  
      "SCROLLLOCK")
		keycode=71	  
	  ;;
	  
	  "BREAK"|"PAUSE")
		keycode=72	  
	  ;;  
	  
      "INSERT")
		keycode=73  
	  ;; 

      "HOME")
		keycode=74  
	  ;; 
	  
      "PAGEUP")
		keycode=75  
	  ;; 

      "DELETE"|"DEL")
		keycode=76 
	  ;; 
  
      "END")
		keycode=77	  
	  ;; 
	  
      "PAGEDOWN")
		keycode=78 
	  ;; 	  

      "RIGHTARROW"|"RIGHT")
		keycode=79  
	  ;;
	  
      "LEFTARROW"|"LEFT")
		keycode=80  
	  ;;	  
      "DOWNARROW"|"DOWN")
		keycode=81	  
	  ;;	  

      "UPARROW"|"UP")
		keycode=82	  
	  ;;

	  "NUMLOCK")
		keycode=83	  
	  ;; 
	  
	  "MENU"|"APP")
		keycode=101
	  ;;

	  *)
		asciicode=$(printf "%d" "'$1")
		keycode=${asciitokey[$asciicode]}
		if [ $keycode -gt 200 ]; then
			keycode=$(($keycode-200))
			modcode=$(($modcode+64))
		elif [ $keycode -gt 100 ]; then
			keycode=$(($keycode-100))
			modcode=$(($modcode+2))
		else
			modcode=$(($modcode+0))
		fi
	  ;;
	  
	esac
}

echo "The file is $file and the device is $device with a delay of $delay"

cat $file | while IFS= read -r line; do 

   #echo $line

   type=${line%% *}

   case $type in
      
	  "REM") echo ${line/$type /} 
		;;

      "DEFAULT_DELAY"|"DEFAULTDELAY")
		delay=${line/$type /}
		echo " ==> The delay is now $delay"
		;;

      "DELAY") #echo "this causes a delay"
		millisleep ${line/$type /}
		;;

      "STRING")
		line=${line/$type /}
		for i in `seq 0 $((${#line}-1))`
		do
			asciicode=$(printf "%d" "'${line:$i:1}")
			keycode=${asciitokey[$asciicode]}
			if [ $keycode -gt 200 ]; then
				keycode=$(($keycode-200))
				modcode=64
			elif [ $keycode -gt 100 ]; then
				keycode=$(($keycode-100))
				modcode=2
			else
				modcode=0
			fi
			hexcode=$(printf "%02X" $keycode)
			modcode=$(printf "%02X" $modcode)

			#echo "${line:$i:1} "
			#echo "$modcode $hexcode"

			#echo "\x$modcode\x00\x$hexcode\x00\x00\x00\x00\x00"
			
			echo "\x$modcode\x00\x$hexcode\x00\x00\x00\x00\x00" > $device
			millisleep $delay
			echo "\x00\x00\x00\x00\x00\x00\x00\x00" > $device
		done
		;;
	  
	  "REPEAT")
		for i in `seq 1 ${line/$type /}`
		do
			echo $i
			echo "$modcode $hexcode"
			echo "\x$modcode\x00\x$hexcode\x00\x00\x00\x00\x00"
			
			echo "\x$modcode\x00\x$hexcode\x00\x00\x00\x00\x00" > $device
			millisleep $delay
			echo "\x00\x00\x00\x00\x00\x00\x00\x00" > $device
			millisleep $delay
		done	
		;;
	  
      *)  
		#echo " ==> Not a String or delay"
		keycode=0
		modcode=0
		for command in $line
		do
			#echo $command
			modifier $command
		done
		
		modcode=$(printf "%02X" $modcode)
		hexcode=$(printf "%02X" $keycode)
		
		echo $modcode
		echo $hexcode
		echo "\x$modcode\x00\x$hexcode\x00\x00\x00\x00\x00" 
		
		echo "\x$modcode\x00\x$hexcode\x00\x00\x00\x00\x00" > $device
		millisleep $delay
		echo "\x00\x00\x00\x00\x00\x00\x00\x00" > $device		
	  ;;
	esac

done
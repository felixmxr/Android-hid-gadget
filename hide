# Duckyscript interpreter for usb gadget devices

file=$1

if [ $2 ]; then
	device=$2
else
	device=/dev/hidg0
fi

if [ $3 ]; then
	delay=$3
else
	delay=100
fi

function millisleep {
	i=0
	while [ "$i" -lt "$1" ]
	do
		sleep 0.05
		i=$(($i+50))
		#echo $i
	done
}

